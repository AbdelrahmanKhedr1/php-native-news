<?php
// $argv or $_SERVER['argv']
if (php_sapi_name() == 'cli') {
    $str = $argv;
    if ($str[1] == 'view:clear') {
        $path = 'storage/views';
        $files = glob($path . '/*');
        foreach ($files as $file) {
            if (file_exists($file)) {
                unlink($file);
            }
        }
        echo "views is cleard";
    }
}
